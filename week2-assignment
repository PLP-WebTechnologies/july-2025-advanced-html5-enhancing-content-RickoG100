          <label for="username">Username:</label>
          <input type="text" id="username" name="username" placeholder="Ineah_omondi" required>

          <label for="password">Password:</label>
          <input type="password" id="password" name="password" placeholder="********" minlength="8" required>

          <label for="confirm">Confirm Password:</label>
          <input type="password" id="confirm" name="confirm" placeholder="********" minlength="8" required readonly onfocus="this.removeAttribute('readonly');">
        </fieldset>

