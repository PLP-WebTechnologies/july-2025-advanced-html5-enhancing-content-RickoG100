          <legend>Personal Details</legend>
          <label for="fullname">Full Name:</label>
          <input type="text" id="fullname" name="fullname" placeholder="Ineah Omondi" required>

          <label for="email">Email Address:</label>
          <input type="email" id="email" name="email" placeholder="ineah@example.com" required autocomplete="email">

          <label for="phone">Phone Number:</label>
          <input type="tel" id="phone" name="phone" placeholder="+254700000000" pattern="[+0-9]{10,15}" required>

          <label for="dob">Date of Birth:</label>
          <input type="date" id="dob" name="dob" required>
        </fieldset>

        <fieldset>
